{
  "name": "simple-inventory",
  "version": "0.2.0",
  "description": "Home Assistant Simple Inventory Integration Card",
  "author": "Blaine Venturine",
  "license": "MIT",
  "main": "dist/simple-inventory-card.js",
  "card_type": "simple-inventory-card",
  "repository": {
    "type": "git",
    "url": "https://github.com/blaineventurine/simple-inventory-card.git"
  },
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "inventory"
  ],
  "scripts": {
    "build": "vite build --config vite.config.ts",
    "dev": "vite",
    "format:js": "prettier --write src/**/*.ts",
    "format:staged": "prettier --write",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:staged": "eslint --fix",
    "pre-commit": "lint-staged",
    "prepare": "husky",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "type-check:incremental": "tsc --noEmit --incremental"
  },
  "lint-staged": {
    "src": [
      "tsc --noEmit"
    ],
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@stryker-mutator/typescript-checker": "^9.0.1",
    "@stryker-mutator/vitest-runner": "^9.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.30",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^3.2.3",
    "@vitest/ui": "^3.2.3",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.1",
    "prettier": "^3.5.3",
    "terser": "^5.41.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "dependencies": {
    "lit": "^3.3.0",
    "tslib": "^2.8.1"
  }
}
